<html>

<%- include("./partials/head.ejs") %>

<body>

<%- include("./partials/nav.ejs") %>

<section class="center">
            <h1>All Blogs</h1>
       <% if(blogs.length > 0){%>
        <% blogs.map(blog=>{%>
        <a href="/blogs/<%= blog._id%>">
            <h3><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
            <p><strong><%= blog.body %></strong></p>
        </a>
        <%}) %>
       <% } else {%>
            <pre>No blog to display</pre>
        <%}%>

</section>

<%- include("./partials/footer.ejs") %>

</body>
</html>